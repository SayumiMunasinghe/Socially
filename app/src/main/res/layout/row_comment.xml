<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_comment_parentLayout"
    android:gravity="center_vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/row_comment_userImageIV"
            android:src="@drawable/plus_ultra" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Might"
                android:id="@+id/row_comment_usernameTV"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/btn_orange"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is this your new place?"
                android:id="@+id/row_comment_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="5dp"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/row_comment_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_edit_comment"
                    android:textSize="13sp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/btn_orange"
                    android:id="@+id/row_comment_edit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_delete_comment"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/btn_orange"
                    android:id="@+id/row_comment_delete"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>