<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Socially" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn_orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="textColorSearchUrl">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_orange</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    Theme Without ActionBar-->
    <style name="Theme.Socially.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn_orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_orange</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/alertDialogAnimation</item>
    </style>

    <!-- Bottom slide in Dialog box animation -->
    <style name="bottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--  Alert Dialog animation  -->
    <style name="alertDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Socially.whiteActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
<!--        <item name="colorPrimaryVariant">@color/btn_orange</item>-->
<!--        <item name="colorOnPrimary">@color/background_clr</item>-->
        <item name="actionBarTheme">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_orange</item>
        <!-- Customize your theme here. -->
    </style>
</resources>